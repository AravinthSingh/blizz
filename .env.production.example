APP_NAME="Blizz Ayurveda"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://blizzaura.lk

LOG_CHANNEL=stack
LOG_LEVEL=info

# PHP runtime / time
TIMEZONE=Asia/Colombo

# Database (update with your hosting DB creds)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=blizz
DB_USERNAME=blizz_user
DB_PASSWORD=secure_password

# Cache & session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail (update as needed)
MAIL_MAILER=smtp
MAIL_HOST=mail.blizzaura.lk
MAIL_PORT=587
MAIL_USERNAME=no-reply@blizzaura.lk
MAIL_PASSWORD=secure_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@blizzaura.lk
MAIL_FROM_NAME="Blizz Ayurveda"

# Vite â€“ ensure manifest is generated with npm run build and public/build is uploaded
VITE_APP_NAME="Blizz Ayurveda"
